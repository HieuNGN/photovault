            {/*<FormControlLabel*/}
            {/*    control={*/}
            {/*        <Switch*/}
            {/*            checked={multipleMode}*/}
            {/*            onChange={(e) => {*/}
            {/*                setMultipleMode(e.target.checked);*/}
            {/*                if (!e.target.checked && files.length > 1) {*/}
            {/*                    // Keep only the first file when switching to single mode*/}
            {/*                    const firstFile = files[0];*/}
            {/*                    files.slice(1).forEach(file => {*/}
