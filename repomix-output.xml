                                {/*    component="img"*/}
                                {/*    height="200"*/}
                                {/*    image={`http://localhost:8080/images/${image.id}/download`}*/}
                                {/*    alt={image.originalFilename}*/}
                                {/*    sx={{ objectFit: 'cover' }}*/}
                                {/*/>*/}
